<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MaterialDateTimePicker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_300</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>


        <item name="topBackgroundColor">@color/white</item>
        <item name="bottomBackgroundColor">@color/G100</item>
        <item name="pickerBackgroundColor">@color/white</item>
        <item name="pickerTextColor">@color/black</item>
        <item name="dialogBackgroundColor">@color/white</item>

        <!-- If you need to have same Date/Time picker style in whole app. You can set in the Theme       -->
        <item name="materialTimePickerViewStyle">@style/TimePickerStyle</item>
        <item name="materialDatePickerViewStyle">@style/DatePickerStyle</item>


    </style>


    <style name="Theme.MaterialDateTimePicker.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MaterialDateTimePicker.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MaterialDateTimePicker.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
