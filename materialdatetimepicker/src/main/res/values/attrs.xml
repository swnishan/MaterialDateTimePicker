<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="MaterialDateTimePicker">
        <attr name="highlighterColor" format="color"/>
        <attr name="highlighterHeight" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="MaterialTimePickerView">
        <attr name="highlighterColor"/>
        <attr name="highlighterHeight" />
        <attr name="android:background"/>
        <attr name="android:textAppearance"/>
        <attr name="timeConvention" format="enum">
            <enum name="HOURS_24" value="0"/>
            <enum name="HOURS_12" value="1"/>
        </attr>
        <attr name="defaultHour" format="integer"/>
        <attr name="defaultMinute" format="integer"/>
    </declare-styleable>

    <declare-styleable name="MaterialDatePickerView">
        <attr name="highlighterColor"/>
        <attr name="highlighterHeight"/>
        <attr name="android:background"/>
        <attr name="android:textAppearance"/>
        <attr name="defaultYear" format="integer"/>
        <attr name="defaultMonth" format="integer"/>
        <attr name="defaultDay" format="integer"/>
        <attr name="minYear" format="integer"/>
        <attr name="maxYear" format="integer"/>
    </declare-styleable>

    <declare-styleable name="MaterialTimePickerOverlay">
        <attr name="materialTimePickerViewStyle" format="reference"/>
    </declare-styleable>

    <declare-styleable name="MaterialTimeDateOverlay">
        <attr name="materialDatePickerViewStyle" format="reference"/>
    </declare-styleable>

</resources>